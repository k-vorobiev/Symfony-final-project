<div class="Header-categories">
    <div class="CategoriesButton">
        <div class="CategoriesButton-title">
            <div class="CategoriesButton-icon"><img src="{{ asset('images/icons/allDep.svg') }}" alt="allDep.svg"/></div>
            <span class="CategoriesButton-text">Категории</span>
            <div class="CategoriesButton-arrow"></div>
        </div>
        <div class="CategoriesButton-content">
            {% if categories is not empty %}
                {% for category in categories %}
                    <div class="CategoriesButton-link">
                        <a href="{{ path('app_category', {id: category.id} ) }}">
                            <div class="CategoriesButton-icon"><img src="{{ asset(category.imageUrl) }}" alt="1.svg"/></div>
                            <span class="CategoriesButton-text">{{ category.name }}</span>
                        </a>
                        {% if category.parentId %}
                            <div class="CategoriesButton-submenu">
                                <a class="CategoriesButton-link" href="#">
                                    <div class="CategoriesButton-icon">
                                        <img src="{{ asset('images/icons/departments/1.svg') }}" alt="1.svg"/>
                                    </div>
                                    <span class="CategoriesButton-text">Accessories</span>
                                </a>
                            </div>
                        {% endif %}
                    </div>
                {% endfor %}
            {% endif %}
        </div>
    </div>
</div>