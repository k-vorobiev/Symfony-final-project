<div class="Section-column">
    <div class="Section-columnSection">
        <header class="Section-header">
            <strong class="Section-title">Фильтр</strong>
        </header>
        <div class="Section-columnContent">
            <form class="form" method="get">
                <div class="form-group">
                    <input class="form-input form-input_full" id="title" name="title" type="text" value="{{ app.request.get('title') }}" placeholder="Название"/>
                </div>
                <div class="form-group">
                    <div style="display:flex;">
                        <input class="form-input" type="number" name="price_from" min="0" value="{{ app.request.get('price_from')|default("") }}"
                               placeholder="Цена от" style="margin-right: 20px;">
                        <input class="form-input" type="number" name="price_to" min="1" value="{{ app.request.get('price_to')|default("") }}"
                               placeholder="Цена до">
                    </div>
                </div>
                <div class="form-group">
                    <select class="form-select" name="seller">
                        <option selected="selected" disabled="disabled">Продавец</option>
                        {% if sellers %}
                            {% for seller in sellers %}
                                <option value="{{ seller.id }}" {% if app.request.get('seller') == seller.id %}selected="selected"{% endif %}>{{ seller.name }}</option>
                            {% endfor %}
                        {% endif %}
                    </select>
                </div>
                <div class="form-group">
                    <div class="buttons">
                        <button class="btn btn_square btn_dark btn_narrow">Применить</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>